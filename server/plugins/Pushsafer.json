{
    "name": "Pushsafer",
    "description": "PushSafer plugin",
    "disable": false,
    "trigger": "message",
    "scope": "after",
    "config": [ 
        {
            "name": "pushsaferKey",
            "label": "PushSafer Private Key",
            "description": "Private Key for the PushSafer API",
            "type": "text",
            "required": true
        }
    ],
    "aliasConfig": [ 
        {
            "name": "enable",
            "label": "Enable",
            "description": "Enable sending messages that match this alias via PushSafer",
            "type": "checkbox"
        },
        {
            "name": "device",
            "label": "Device or Device Group ID",
            "description": "PushSafer destination for messages",
            "type": "text",
            "required": true
        },
        {
            "name": "vibration",
            "label": "Vibration",
            "description": "Strengh of vibration",
            "type": "select",
            "options": [
                {"value": "", "text": "Off"},
                {"value": "1", "text": "Low"},
                {"value": "2", "text": "Medium"},
                {"value": "3", "text": "High"}
            ]
        },
        {
            "name": "alertsound",
            "label": "Alert Sound",
            "description": "Sets the notification sound for alerts. Leaving this blank will use the default notification sound set in your application",
            "type": "select",
            "options": [
                {"value": "0", "text": "Silent"},
                {"value": "1", "text": "Ahem"},
                {"value": "2", "text": "Applause"},
                {"value": "3", "text": "Arrow"},
                {"value": "4", "text": "Baby"},
                {"value": "5", "text": "Bell"},
                {"value": "6", "text": "Bicycle"},
                {"value": "7", "text": "Boing"},
                {"value": "8", "text": "Buzzer"},
                {"value": "9", "text": "Camera"},
                {"value": "22", "text": "Morse"},
                {"value": "61", "text": "Pager short"},
		        {"value": "62", "text": "Pager long"}
            ]
        },
        {
            "name": "infosound",
            "label": "Information Sound",
            "description": "Sets the notification sound for information messages. Leaving this blank will use the default notification sound set in your application",
            "type": "select",
            "options": [
                {"value": "0", "text": "Silent"},
                {"value": "1", "text": "Ahem"},
                {"value": "2", "text": "Applause"},
                {"value": "3", "text": "Arrow"},
                {"value": "4", "text": "Baby"},
                {"value": "5", "text": "Bell"},
                {"value": "6", "text": "Bicycle"},
                {"value": "7", "text": "Boing"},
                {"value": "8", "text": "Buzzer"},
                {"value": "9", "text": "Camera"},
                {"value": "22", "text": "Morse"},
                {"value": "61", "text": "Pager short"},
		        {"value": "62", "text": "Pager long"}
            ]
        }
    ]
}
